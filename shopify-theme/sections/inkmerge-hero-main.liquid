<style>
.inkmerge-hero-main {
  background: linear-gradient(135deg, #FF6B35 0%, #E85A2A 50%, #D54618 100%);
  position: relative;
  overflow: hidden;
  padding: 100px 20px 80px;
  min-height: 700px;
  display: flex;
  align-items: center;
}

/* Animated Background Shapes */
.hero-bg-shapes {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  pointer-events: none;
}

.shape {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
}

.shape-1 {
  width: 600px;
  height: 600px;
  top: -200px;
  right: -100px;
  animation: float-shape 20s infinite ease-in-out;
}

.shape-2 {
  width: 400px;
  height: 400px;
  bottom: -100px;
  left: -50px;
  animation: float-shape 15s infinite ease-in-out reverse;
}

.shape-3 {
  width: 300px;
  height: 300px;
  top: 40%;
  left: 10%;
  animation: float-shape 25s infinite ease-in-out;
}

@keyframes float-shape {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  33% { transform: translate(30px, -40px) rotate(120deg); }
  66% { transform: translate(-30px, 30px) rotate(240deg); }
}

.hero-container {
  max-width: 1400px;
  margin: 0 auto;
  position: relative;
  z-index: 2;
}

.hero-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
}

/* Left Content */
.hero-content {
  color: white;
}

.announcement-badge {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  padding: 12px 24px;
  border-radius: 50px;
  font-weight: 600;
  font-size: 15px;
  margin-bottom: 30px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  animation: pulse 3s infinite;
}

.badge-icon {
  font-size: 20px;
  animation: bounce 2s infinite;
}

.hero-headline {
  font-size: 3.5rem;
  font-weight: 800;
  line-height: 1.1;
  margin-bottom: 25px;
  text-transform: uppercase;
  letter-spacing: -1px;
  text-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
}

.hero-subheadline {
  font-size: 1.25rem;
  line-height: 1.7;
  margin-bottom: 40px;
  opacity: 0.95;
  max-width: 550px;
}

.hero-cta-row {
  display: flex;
  gap: 20px;
  margin-bottom: 50px;
  flex-wrap: wrap;
}

.btn-hero {
  padding: 18px 40px !important;
  font-size: 18px !important;
  font-weight: 700 !important;
  border-radius: 50px !important;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: all 0.3s ease !important;
  box-shadow: 0 6px 25px rgba(0, 0, 0, 0.3) !important;
}

.btn-primary.btn-hero {
  background: linear-gradient(135deg, #06B6D4 0%, #0891B2 100%) !important;
  color: white !important;
}

.btn-primary.btn-hero:hover {
  transform: translateY(-4px) scale(1.05) !important;
  box-shadow: 0 10px 35px rgba(6, 182, 212, 0.5) !important;
}

.btn-secondary.btn-hero {
  background: white !important;
  color: #FF6B35 !important;
  border: 3px solid white !important;
}

.btn-secondary.btn-hero:hover {
  background: rgba(255, 255, 255, 0.1) !important;
  color: white !important;
  border-color: white !important;
}

/* Trust Badges */
.hero-trust-badges {
  display: flex;
  gap: 30px;
  flex-wrap: wrap;
}

.trust-item {
  display: flex;
  align-items: center;
  gap: 12px;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  padding: 15px 20px;
  border-radius: 15px;
  border: 2px solid rgba(255, 255, 255, 0.2);
}

.trust-icon {
  font-size: 32px;
}

.trust-text {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.trust-text strong {
  font-size: 16px;
  font-weight: 700;
}

.trust-text span {
  font-size: 13px;
  opacity: 0.9;
}

/* Right Visual */
.hero-visual {
  position: relative;
}

.devices-container {
  position: relative;
  animation: float-devices 6s ease-in-out infinite;
}

@keyframes float-devices {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20px); }
}

.hero-devices-image {
  width: 100%;
  height: auto;
  filter: drop-shadow(0 20px 60px rgba(0, 0, 0, 0.3));
}

/* Start Order Section */
.start-order-section {
  padding: 80px 20px;
  background: linear-gradient(180deg, #F9FAFB 0%, white 100%);
}

.start-order-title {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 800;
  color: #0F172A;
  margin-bottom: 15px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.start-order-subtitle {
  text-align: center;
  font-size: 1.25rem;
  color: #64748B;
  margin-bottom: 60px;
}

.order-options-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
  max-width: 1200px;
  margin: 0 auto;
}

.order-option-card {
  background: white;
  padding: 40px;
  border-radius: 20px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.order-option-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5px;
  background: linear-gradient(135deg, #0891B2, #4CAF50);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.order-option-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 12px 40px rgba(8, 145, 178, 0.2);
}

.order-option-card:hover::before {
  transform: scaleX(1);
}

.option-icon {
  font-size: 4rem;
  margin-bottom: 20px;
}

.order-option-card h3 {
  font-size: 1.75rem;
  font-weight: 800;
  color: #0F172A;
  margin-bottom: 15px;
}

.order-option-card p {
  color: #64748B;
  line-height: 1.7;
  margin-bottom: 25px;
}

.option-cta {
  display: inline-block;
  color: #0891B2;
  font-weight: 700;
  font-size: 1.125rem;
  text-decoration: none;
  transition: all 0.3s ease;
}

.option-cta:hover {
  color: #FF6B35;
  transform: translateX(5px);
}

/* Responsive */
@media (max-width: 968px) {
  .hero-row {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .hero-headline {
    font-size: 2.5rem;
  }
  
  .hero-subheadline {
    font-size: 1.125rem;
  }
  
  .hero-cta-row {
    justify-content: center;
  }
  
  .hero-trust-badges {
    justify-content: center;
  }
  
  .order-options-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 640px) {
  .inkmerge-hero-main {
    padding: 60px 15px 50px;
  }
  
  .hero-headline {
    font-size: 2rem;
  }
  
  .hero-cta-row {
    flex-direction: column;
    align-items: stretch;
  }
  
  .btn-hero {
    width: 100%;
    text-align: center;
  }
  
  .hero-trust-badges {
    flex-direction: column;
  }
  
  .trust-item {
    justify-content: center;
  }
}
</style>

