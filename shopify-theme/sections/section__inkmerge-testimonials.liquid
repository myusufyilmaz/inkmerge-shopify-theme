<style>
.testimonials-section {
  padding: 80px 20px;
  background: white;
}

.testimonials-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 30px;
  margin: 60px 0;
}

.testimonial {
  background: var(--inkmerge-gray-50);
  padding: 30px;
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.08);
  border-top: 4px solid var(--inkmerge-blue-primary);
  transition: all 0.3s ease;
}

.testimonial:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 24px rgba(8, 145, 178, 0.15);
}

.testimonial-stars {
  color: var(--inkmerge-orange-primary);
  font-size: 20px;
  margin-bottom: 15px;
}

.testimonial-text {
  font-size: 16px;
  line-height: 1.7;
  color: var(--inkmerge-gray-700);
  margin-bottom: 20px;
  font-style: italic;
}

.testimonial-author {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.testimonial-author strong {
  color: var(--inkmerge-gray-900);
  font-size: 16px;
}

.testimonial-author span {
  color: var(--inkmerge-gray-600);
  font-size: 14px;
}

.stats-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 30px;
  margin: 60px 0 40px;
  padding: 40px;
  background: linear-gradient(135deg, var(--inkmerge-blue-primary), var(--inkmerge-blue-dark));
  border-radius: 16px;
  color: white;
}

.stat {
  text-align: center;
}

.stat-number {
  font-size: 48px;
  font-weight: 800;
  margin-bottom: 10px;
  color: white;
}

.stat-label {
  font-size: 16px;
  opacity: 0.95;
}

@media (max-width: 768px) {
  .testimonials-grid {
    grid-template-columns: 1fr;
  }
  
  .stats-row {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .stat-number {
    font-size: 36px;
  }
}
</style>

