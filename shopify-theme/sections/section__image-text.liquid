<style>
  {% render 'common-css' with section as section %}

  {% if section.settings.overlayOpacity > 0 %}
  .overlay--{{-section.id}} {
      opacity: {{section.settings.overlayOpacity | times: 0.01}};
      background-color: {{section.settings.overlayColor}};
  }
  {% endif %}

  {% if section.settings.imageOverlayOpacity > 0 %}
  .image__overlay--{{-section.id}} {
      opacity: {{section.settings.imageOverlayOpacity | times: 0.01}};
      background-color: {{section.settings.imageOverlayColor}};
  }
  {% endif %}

  #s--{{section.id}} .s__content {
    {% if section.settings.imagePosition == "right" %}
    flex-direction: row-reverse;
    {%endif%}
    padding: {{section.settings.padding}}px;
  }

  #s--{{section.id}} .s__content-text-image {
    padding: {{section.settings.padding}}px;
  }

  {% if section.settings.imagePosition == "right" %}
    #s--{{section.id}} .s__content-text-image {
      flex-direction: row-reverse;
    }
  {%endif%}

  {% if section.settings.layout == "stretchContent" %}
  #s--{{section.id}} .tximage__image {
    padding: 0px;
  }
  {%endif%}

  #s--{{section.id}} .accordion__item {
      background: {{section.settings.backgroundColor}};
      text-align: left;
  }

  #s--{{section.id}} .accordion__item--title {
      padding: 0.5rem 1rem;
  }

  #s--{{section.id}} .accordion__item--content p, #s--{{section.id}} .accordion__item--title {
      color: {% unless section.settings.contentColor contains 'rgba(0,0,0,0)' %}{{section.settings.contentColor}}{% else %}initial{% endunless %};
  }

  #s--{{section.id}} .accordion {
      max-width: 800px;
      margin: auto;
  }

  #s--{{section.id}} .accordion__input{
      display: none;
  }

  @media only screen and (max-width: 768px){
      #s--{{section.id}} .accordion{
          padding: {{ section.settings.vertPaddingAccord }}px {{ section.settings.horPaddingAccord }}px;
      }
  }

  #colorcode{}
</style>

