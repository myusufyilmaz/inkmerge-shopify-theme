{% if section.blocks.size > 0 %}
<style>
.footer {
    background-color: {{section.settings.fillColor}};
    {% if section.settings.footerLinearBg != blank %}background: {{section.settings.footerLinearBg}};{% endif %}
    color: {% unless section.settings.contentColor contains 'rgba(0,0,0,0)' %}{{section.settings.contentColor}}{% else %}initial{% endunless %};
    font-size: 15px;
    padding: 32px 0px;
}

.footer__block {
    padding: {{section.settings.spacing}}px {{section.settings.spacing}}px;
}
</style>

{% capture layoutConfig %}{% render 'common-layout' with section as section %}{% endcapture %}

<div class="inherit footer layout__{{-layoutConfig}}">
    <div class="layout__content row">
    {% for block in section.blocks %}
    <div class="col-12 col-md col-md-{{-block.settings.width}} footer__block {{block.settings.horizontalAlignment}} {{block.settings.verticalAlignment-}}">
    {% render 'get-block' with block as block %}
    </div>
    {% endfor %}
    </div>
    
    {%comment%} InkMerge Branding {%endcomment%}
    <div class="inkmerge-branding">
      <div class="branding-content">
        <img src="{{ 'inkmerge-icon.png' | asset_url }}" alt="InkMerge" class="branding-logo">
        <span class="branding-text">Made with ðŸ’™ by <strong>InkMerge</strong> Â· DTF Transfer Experts Since 2019</span>
      </div>
    </div>
</div>

<style>
.inkmerge-branding {
  background: linear-gradient(135deg, #0F172A 0%, #1A2332 100%);
  padding: 20px;
  text-align: center;
  border-top: 3px solid;
  border-image: linear-gradient(90deg, #0891B2, #4CAF50, #FF6B35) 1;
  margin-top: 40px;
}

.branding-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  flex-wrap: wrap;
}

.branding-logo {
  width: 32px;
  height: 32px;
  animation: spin-slow 10s linear infinite;
}

@keyframes spin-slow {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.branding-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 14px;
}

.branding-text strong {
  color: #0891B2;
  font-weight: 700;
}

@media (max-width: 640px) {
  .branding-content {
    flex-direction: column;
    gap: 8px;
  }
}
</style>

{% endif %}

