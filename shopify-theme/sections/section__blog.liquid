<style type="text/css">
  {% render 'common-css' with section as section %}

  {% if section.settings.enableCarousel %}
    #s--{{ section.id }} .swiper:not(.swiper-initialized) .card--holder {
      margin-right: {{ section.settings.spaceBetween }}px;
    }

    @media screen and (max-width: 767px) {
      #s--{{ section.id }} .card--holder {
        width: {{ 100 | divided_by: section.settings.productCardMobile | at_least: 20 }}%;
      }
    }

    @media screen and (min-width: 768px) and (max-width: 1024px) {
      #s--{{ section.id }} .card--holder {
        width: {{ 100 | divided_by: section.settings.productCardTablet | at_least: 20 }}%;
      }
    }

    @media screen and (min-width: 1025px) {
      #s--{{ section.id }} .card--holder {
        width: {{ 100 | divided_by: section.settings.productCardDesktop | at_least: 20 }}%;
      }
    }
  {% endif %}
</style>

{% assign customID = section.settings.custom_id %}
{% assign isCarousel = section.settings.enableCarousel %}
{% assign blocks = blogs[section.settings.blog].articles %}

<div
  id="s--{{ section.id }}"
  {% if isCarousel %}
    data-bstr-carousel
    data-bstr-carousel-options='
      {
        "loop": true,
        "spaceBetween": {{ section.settings.spaceBetween }},
        "slidesPerView": {{ section.settings.productCardMobile }},
        "breakpoints": {
          "768": { "slidesPerView": {{ section.settings.productCardTablet }} },
          "1025": { "slidesPerView": {{ section.settings.productCardDesktop }} }
        }
      }
    '
  {% endif %}
  class="{% render 'common-class', section: section, class: 'row section__columns', bg: true %}"
>
  {% if section.settings.overlayOpacity > 0 %}
    <div
      class="overlay"
      style="opacity: {{ section.settings.overlayOpacity | times: 0.01 }}; background-color: {{ section.settings.overlayColor }};"
    ></div>
  {% endif %}

  <div id="{{ customID }}" class="row {{ section.settings.horizontalAlignment }} middle s__content layout__content">
    {% render 'block__general--heading' with section as section %}

    {% if isCarousel %}
      <div class="swiper" data-bstr-carousel-items>
        <div class="swiper-wrapper">
          {% for block in blocks limit: section.settings.maxCards %}
            <div class="card--holder swiper-slide{% if settings.easeIn %} ease-in{% endif %}">
              {% render 'blog-card' with block as article %}
            </div>
          {% else %}
            {% for i in (1..3) %}
              <div class="card--holder swiper-slide{% if settings.easeIn %} ease-in{% endif %}">
                {% render 'blog-card-fake', i: i %}
              </div>
            {% endfor %}
          {% endfor %}
        </div>

        <div class="swiper-pagination" data-bstr-carousel-pagination></div>
        <div class="swiper-button-prev" data-bstr-carousel-button-prev></div>
        <div class="swiper-button-next" data-bstr-carousel-button-next></div>
      </div>
    {% else %}
      <div class="row">
        {% for block in blocks limit: section.settings.maxCards %}
          <div class="col-12 col-md-4 card--holder{% if settings.easeIn %} ease-in{% endif %}">
            {% render 'blog-card' with block as article %}
          </div>
        {% else %}
          {% for i in (1..3) %}
            <div class="col-12 col-md-4 card--holder{% if settings.easeIn %} ease-in{% endif %}">
              {% render 'blog-card-fake', i: i %}
            </div>
          {% endfor %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

