    <link href="https://static.boostertheme.co" rel="preconnect" crossorigin>
    <link rel="dns-prefetch" href="//static.boostertheme.co">
    <link href="https://theme.boostertheme.com" rel="preconnect" crossorigin>
    <link rel="dns-prefetch" href="//theme.boostertheme.com">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="dns-prefetch" href="//cdn.shopify.com">

    {% render 'layout__favicon' %}

    {{ content_for_header }}

    <style>
      {% render 'global-scss' %}
      {% render 'styles-css' %}
    </style>
    {% render 'inkmerge-custom-styles' %}
    {% unless settings.headHTML == blank %}
      {{settings.headHTML}}
    {% endunless %}
    {% unless settings.headJS == blank %}
      <script>
      {{settings.headJS}}
      </script>
    {% endunless %}
    {% render 'layout__custom-code--head' %}
    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
    {{ 'swiper-bundle.min.js' | asset_url | script_tag }}
    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    
    {%comment%} InkMerge Brand Transformation - Colorful chameleon design with smooth animations {%endcomment%}
    {{ 'inkmerge-brand-transform.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'inkmerge-animations.js' | asset_url }}" defer="defer"></script>
    
    <style>
      /* Fix for homepage sections extending beyond container */
      .template--index .section__slider,
      .template--index .section__slider--responsive,
      .template--index .section__slider--adaptive,
      .template--index .section__banner,
      .template--index .section__lookbook,
      .template--index .section__image-text {
        width: 100% !important;
        max-width: 100% !important;
        margin-left: 0 !important;
        margin-right: 0 !important;
        left: auto !important;
        right: auto !important;
        transform: none !important;
      }
      
      /* Fix for nested slider elements also using 100vw */
      .template--index .section__slider .slider,
      .template--index .section__slider--responsive .slider,
      .template--index .section__slider--adaptive .slider,
      .template--index .section__slider .swiper,
      .template--index .section__slider .swiper-container,
      .template--index .section__slider .swiper-wrapper,
      .template--index .section__slider .slider__slide,
      .template--index .section__banner .banner__inner,
      .template--index .section__lookbook .lookbook,
      .template--index .section__image-text .image-text__inner {
        width: 100% !important;
        max-width: 100% !important;
        margin-left: 0 !important;
        margin-right: 0 !important;
        left: auto !important;
        right: auto !important;
        transform: none !important;
      }
      
      /* Prevent horizontal scroll completely */
      html {
        overflow-x: hidden;
      }
    </style>

