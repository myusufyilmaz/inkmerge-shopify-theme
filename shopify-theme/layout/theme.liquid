        "addressLocality": "Sugar Land",
        "addressRegion": "TX",
        "postalCode": "77479",
        "addressCountry": "US"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+1-832-660-1352",
        "contactType": "Customer Service",
        "email": "inkmerge@lecuiral.com",
        "availableLanguage": "English",
        "areaServed": "US"
      },
      "sameAs": [
        {{ shop.url | json }}
      ]
    }
    </script>
    
