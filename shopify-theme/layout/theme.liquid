        <div class="add-to-cart__success" id="checkout--success">
        {% render 'add-to-cart__template--success' %}
        </div>
      </div>

      {% render 'layout__template--specific' %}

      <main role="main">
        {{ content_for_layout }}

        <div class="wrapper--bottom">
          {% section 'info-badges' %}
