    <title>
      {{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags |
      join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{
      current_page }}{% endif %}{% unless page_title contains shop.name %}
      &ndash; {{ shop.name }}{% endunless %}
    </title>
    
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}" />
    {% else %}
      <meta name="description" content="High-quality DTF transfers and custom apparel with honest, simple pricing, 24-48 hour turnaround. No minimums, free shipping over $99. Built to scale from solo creators to enterprise." />
    {% endif %}
    
    <meta name="keywords" content="DTF transfers, custom DTF printing, dtf gang sheet, ready to print dtf, precut dtf, custom apparel, wholesale DTF transfers, DTF heat transfers, DTF gang sheet builder, best DTF film" />
    <meta name="author" content="InkMerge - Herdsman Craft LLC" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <link rel="canonical" href="{{ canonical_url }}" />
    
    {% assign og_title = page_title | default: shop.name %}
    {% assign og_description = page_description | default: "High-quality DTF transfers and custom apparel with honest, simple pricing, 24-48 hour turnaround. No minimums, free shipping over $99." %}
    {% assign og_url = canonical_url %}
    {% assign og_image = '' %}
    
    {% if template contains 'product' and product.featured_image %}
      {% assign og_image = product.featured_image | image_url: width: 1200 %}
    {% elsif collection.image %}
      {% assign og_image = collection.image | image_url: width: 1200 %}
    {% elsif template == 'index' and settings.defaultLogo %}
      {% assign og_image = settings.defaultLogo | image_url: width: 1200 %}
    {% endif %}
    
    <meta property="og:site_name" content="{{ shop.name }}" />
    <meta property="og:type" content="{% if template contains 'product' %}product{% elsif template contains 'article' %}article{% else %}website{% endif %}" />
    <meta property="og:title" content="{{ og_title | escape }}" />
    <meta property="og:description" content="{{ og_description | escape }}" />
    <meta property="og:url" content="{{ og_url }}" />
    {% if og_image != blank %}
      <meta property="og:image" content="https:{{ og_image }}" />
      <meta property="og:image:secure_url" content="https:{{ og_image }}" />
      <meta property="og:image:width" content="1200" />
      <meta property="og:image:height" content="630" />
    {% endif %}
    <meta property="og:locale" content="en_US" />
    
    {% if template contains 'product' %}
      <meta property="product:brand" content="{{ shop.name }}" />
      <meta property="product:availability" content="{% if product.available %}in stock{% else %}out of stock{% endif %}" />
      <meta property="product:condition" content="new" />
      <meta property="product:price:amount" content="{{ product.price | money_without_currency }}" />
      <meta property="product:price:currency" content="{{ shop.currency }}" />
    {% endif %}
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ og_title | escape }}" />
    <meta name="twitter:description" content="{{ og_description | escape }}" />
    {% if og_image != blank %}
      <meta name="twitter:image" content="https:{{ og_image }}" />
    {% endif %}
    
    <script type="application/ld+json">
